<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:background="#DCDCDC"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/bottom_pic1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/bottom_xiaoxin" />

    <ImageButton
        android:id="@+id/bottom_pic2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bottom_shiro" />

    <ImageButton
        android:id="@+id/bottom_pic3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/bottom_himawari" />

</RelativeLayout>